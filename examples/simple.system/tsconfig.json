{
  "compilerOptions": {
    "module": "system",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": true
  },
  "files": [
    "src/ngdataservice.ts",
    "src/dataservice.module.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": false
  }
}
