{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": false,
    "declaration": true,
    "removeComments": true,
    "types": [
      "core-js",
      "mocha",
      "chai",
      "lodash",
      "node",
      "protractor",
      "selenium-webdriver"
    ]
  },
  "exclude": ["node_modules", "test", "examples", "dist"]
}
