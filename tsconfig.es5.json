{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "declaration": true,
    "removeComments": true,
    "types": [
      "core-js",
      "mocha",
      "chai",
      "lodash",
      "node",
      "protractor",
      "selenium-webdriver"
    ]
  },
  "exclude": ["./index.d.ts", "node_modules", "test", "example", "dist"]
}
