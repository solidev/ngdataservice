{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "dist-commonjs",
    "moduleResolution": "node",
    "declaration": true
  },
  "files": [
    "src/ngdataservice.ts",
    "src/dataservice.module.ts"
  ],
  "exclude": [
    "index.d.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "test",
    "examples",
    "dist-commonjs",
    "dist-esm",
    "dist-umd"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": false
  }
}
