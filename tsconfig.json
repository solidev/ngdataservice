{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "removeComments": true,
    "baseUrl": "./src",
    "paths": [],
    "types": [
      "core-js",
      "jasmine",
      "node",
      "protractor",
      "selenium-webdriver"
    ]
  },
  "exclude": ["node_modules", "test", "examples", "dist"]
}