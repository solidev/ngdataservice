{
  "name": "ngdataservice",
  "version": "0.1.0-beta.4",
  "description": "Angular data objects",
  "main": "./dist/index.js",
  "scripts": {
    "test": "rm -rf coverage; karma start config/karma.conf.js",
    "posttest": "npm run coverage",
    "coverage": "npm run coverage:reporttxt && npm run coverage:reporthtml && npm run coverage:remap",
    "coverage:remap": "remap-istanbul -i coverage/coverage.json -o coverage/coverage.json -t json -e node_modules,vendor.ts",
    "coverage:reporthtml": "remap-istanbul -i coverage/coverage.json -o coverage/html -t html -e node_modules,vendor.ts",
    "coverage:reporttxt": "remap-istanbul -i coverage/coverage.json -t text-summary -o coverage/summary.txt -e node_modules,vendor.ts && cat coverage/summary.txt",
    "build": "rm -rf dist && ngc -p tsconfig.json",
    "build:dev": "tsc -w -p tsconfig.json",
    "changelog": "conventional-changelog  -p angular -i CHANGELOG.md -s -r 1  -c config/changelog.json",
    "preversion": "npm test",
    "version": "npm run changelog && npm run build && npm publish"
  },
  "author": "Jean-Matthieu BARBIER <jm.barbier@solidev.net>",
  "git-tag-version": false,
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.4",
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "rxjs": "5.4.0",
    "zone.js": "0.8.10",
    "@angular/common": "latest",
    "@angular/compiler": "latest",
    "@angular/compiler-cli": "latest",
    "@angular/core": "latest",
    "@angular/http": "latest",
    "@angular/platform-browser": "latest",
    "@angular/platform-browser-dynamic": "latest",
    "@angular/platform-server": "latest",
    "core-js": "2.4.1",
    "@types/chai": "^3.5.2",
    "@types/jasmine": "^2.5.47",
    "@types/lodash": "4.14.64",
    "@types/sinon": "^2.2.1",
    "chai": "^3.5.0",
    "codelyzer": "3.0.1",
    "conventional-changelog-cli": "^1.3.1",
    "cz-conventional-changelog": "^2.0.0",
    "es6-module-loader": "^0.17.11",
    "es6-shim": "^0.35.3",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jasmine-core": "^2.6.1",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-coverage": "^1.1.1",
    "karma-es6-shim": "^1.0.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sauce-launcher": "^1.1.0",
    "karma-source-map-support": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "parse5": "^3.0.2",
    "remap-istanbul": "^0.9.5",
    "sinon": "^2.2.0",
    "ts-helpers": "^1.1.2",
    "ts-loader": "^2.0.3",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2",
    "webpack": "2.5",
    "webpack-dev-server": "2.4.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
