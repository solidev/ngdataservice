{
  "name": "ng2datastore",
  "version": "0.0.0-beta.3",
  "description": "Angular2 data objects",
  "main": "./dist/index.js",
  "scripts": {
    "test": "rm -rf coverage; karma start config/karma.conf.js",
    "posttest": "npm run coverage",
    "coverage": "npm run coverage:reporttxt && npm run coverage:reporthtml && npm run coverage:remap",
    "coverage:remap": "remap-istanbul -i coverage/coverage.json -o coverage/coverage.json -t json -e node_modules,vendor.ts",
    "coverage:reporthtml": "remap-istanbul -i coverage/coverage.json -o coverage/html -t html -e node_modules,vendor.ts",
    "coverage:reporttxt": "remap-istanbul -i coverage/coverage.json -t text-summary -o coverage/summary.txt -e node_modules,vendor.ts && cat coverage/summary.txt",
    "build": "rm -rf dist && ngc -p tsconfig.json",
    "build:dev": "tsc -w -p tsconfig.json",
    "changelog": "conventional-changelog  -p angular -i CHANGELOG.md -s -u -r 1  -c config/changelog.json",
    "preversion": "npm test",
    "version": "npm run build"
  },
  "author": "Jean-Matthieu BARBIER <jm.barbier@solidev.net>",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "2.4.2",
    "@angular/compiler": "^2.4.2",
    "@angular/compiler-cli": "^2.4.2",
    "@angular/core": "2.4.2",
    "@angular/http": "2.4.2",
    "@angular/platform-browser": "2.4.2",
    "@angular/platform-browser-dynamic": "2.4.2",
    "@angular/platform-server": "^2.4.2",
    "core-js": "2.4.1",
    "lodash": "^4.17.4",
    "reflect-metadata": "^0.1.9",
    "rxjs": "5.0.3",
    "zone.js": "0.7.4"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/core-js": "^0.9.35",
    "@types/jasmine": "^2.5.40",
    "@types/lodash": "^4.14.47",
    "@types/node": "^6.0.58",
    "@types/sinon": "^1.16.34",
    "chai": "^3.5.0",
    "codelyzer": "2.0.0-beta.4",
    "conventional-changelog-cli": "^1.2.0",
    "cz-conventional-changelog": "^1.2.0",
    "es6-module-loader": "^0.17.11",
    "es6-shim": "^0.35.2",
    "istanbul-instrumenter-loader": "^1.2.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-es6-shim": "^1.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sauce-launcher": "^1.1.0",
    "karma-source-map-support": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.1",
    "parse5": "^3.0.1",
    "remap-istanbul": "^0.8.4",
    "sinon": "^2.0.0-pre.2",
    "ts-helpers": "^1.1.2",
    "ts-loader": "^1.3.3",
    "tslint": "^4.3.1",
    "typescript": "2.1.4",
    "webpack": "2.2.0-rc.3",
    "webpack-dev-server": "2.2.0-rc.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
