{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": false,
    "declaration": true,
    "removeComments": true,
    "types": [
      "core-js",
      "mocha",
      "node",
      "chai",
      "lodash"
    ]
  },
  "exclude": ["node_modules", "test", "example", "dist"]
}
