{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": false,
    "declaration": true,
    "removeComments": true,
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "jasmine",
      "node",
      "chai",
      "lodash"
    ]
  },
  "files": [
    "../src/ngdatastore.ts",
    "../src/datastore.module.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "example",
    "dist"
  ],
  "include": [
    "../src/**/*"
  ]
}
